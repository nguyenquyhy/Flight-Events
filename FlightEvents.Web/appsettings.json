{
  "Authentication": {
    "Microsoft": {
      "ClientId": "",
      "ClientSecret": "",
      "Authority": "https://login.microsoftonline.com/common/v2.0",
      "CallbackPath": "/signin-microsoft",
      "RemoteSignOutPath": "/signout-microsoft",
      "SignedOutCallbackPath": "/signout-callback-microsoft",
      "Prompt": "login",
      "GetClaimsFromUserInfoEndpoint": true
    }
  },
  "Events": {
    "FilePath": "events.json"
  },
  "FlightPlan": {
    "AzureStorage": {
      "ConnectionString": "",
      "ContainerName": "flightplans",
      "DiscordConnectionTable": "discordconnections",
      "DiscordServerTable": "discordservers",
      "LeaderboardTable": "leaderboards",
      "UserTable": "users",
      "CustomDomain": null
    }
  },
  "Discord": {
    "BotToken": "",
    "ServerId": 0,
    "AddUserToServer": false,
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "https://localhost:44359/Discord/Auth"
  },
  "Broadcast": {
    "MapDelayMilliseconds": 2000
  },
  "Features": {
    "SendMessage": true
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.log",
          "rollingInterval": "Day"
        }
      },
      { "Name": "Console" }
    ]
  }
}
